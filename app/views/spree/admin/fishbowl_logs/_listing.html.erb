<table>
  <colgroup>
     <col style="width: 20%;">
     <col style="width: 15%;">
     <col style="width: 50%;">
     <col style="width: 15%;">
     <col>
  </colgroup>
  <thead>
    <tr>
      <th>Created</th>
      <th>Order</th>
      <th>Message</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td class="align-center"><%= log.created_at %></td>
        <td class="align-center"><%= log.order_id %></td>
        <td><%= log.message %></td>
        <td>
          <%= link_to_with_icon 'icon-edit', t(:view), admin_fishbowl_log_path(log), :class => 'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @logs %>